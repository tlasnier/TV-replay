<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_gravity="center_horizontal"
        android:textSize="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_medium" 
        android:text="@string/bienvenue" />
    
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      	android:layout_width="match_parent"
     	android:layout_height="match_parent"
       	android:orientation="horizontal" >
        
    	<TextView
			android:gravity="center_horizontal" 
    	    android:drawableTop="@drawable/replay"
    	    android:textSize="20dp"
    	    android:layout_height="match_parent"
        	android:layout_width="wrap_content"  
    	    android:padding="@dimen/padding_medium"
    	    android:text="@string/replay"
    	    android:clickable="true"
    	    android:onClick="replayActivity"/>
    	
    	<TextView
			android:gravity="center_horizontal" 
    	    android:drawableTop="@drawable/live"
    	    android:textSize="20dp"
    	    android:layout_height="match_parent"
	        android:layout_width="wrap_content"
    	    android:padding="@dimen/padding_medium"
    	    android:text="@string/flux"
    	    android:clickable="true"
    	    android:onClick="liveActivity"/>
    	
    	<TextView
			android:gravity="center_horizontal" 
    	    android:drawableTop="@drawable/radio"
    	    android:textSize="20dp"
    	    android:layout_height="match_parent"
	        android:layout_width="wrap_content"
    	    android:padding="@dimen/padding_medium"
    	    android:text="@string/radio"
    	    android:clickable="true"
    	    android:onClick="radioActivity"/>        
        
    </LinearLayout>
        
</LinearLayout>